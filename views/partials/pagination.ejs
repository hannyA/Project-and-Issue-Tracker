<nav class="mb-5" aria-label="Page navigation">
  <ul class="pagination justify-content-center">
    <li class="page-item <%if (currentPage === 1){ %> disabled <% } %>">
      <a class="page-link" href="/api/v1/<%=resource%>page=<%=currentPage-1%>"
        >Previous</a
      >
    </li>
    <% for( let i = 1; i <= totalPages; i++ ) { %>

    <li class="page-item">
      <a
        class="page-link <% if (i === currentPage) { %> active <% } %>"
        href="/api/v1/<%=resource%>page=<%= i %>"
        ><%= i %></a
      >
    </li>
    <% } %>

    <li class="page-item <%if (currentPage === totalPages){ %> disabled <% }%>">
      <a class="page-link" href="/api/v1/<%=resource%>page=<%=currentPage+1%>"
        >Next</a
      >
    </li>
  </ul>
</nav>
