<% layout('layouts/boilerplate') %>

<h1>Edit ticket</h1>

<form action="/ticket/<%= ticket._id %>?_method=PUT" method="post">
  <div>
    <label for="title">Title</label>
    <input
      type="text"
      name="ticket[title]"
      id="title"
      value="<%= ticket.title %>"
    />
  </div>

  <div>
    <label for="description">Description</label>
    <input
      type="text"
      name="ticket[description]"
      id="description"
      value="<%= ticket.description %>"
    />
  </div>

  <button>Save</button>
  <button>Cancel</button>
</form>

<footer>
  <a href="/ticket/<%= ticket._id %>">Back to ticket</a>
</footer>
