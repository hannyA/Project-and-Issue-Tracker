  });

  const ctx2 = document.getElementById("myChart2");

  const data2 = {
    labels: ["New", "Assigned", "In Progress", "Closed"],
    datasets: [
      {
        label: "Tasks",
        data: [150, 150, 50, 100],
        backgroundColor: [
          "rgb(54, 162, 235)",
          "rgb(255, 205, 86)",
          "rgb(255, 99, 132)",
          "rgb(150, 44, 180)",
        ],
        hoverOffset: 4,
      },
    ],
  };

  new Chart(ctx2, {
    type: "pie",
    data: data2,
  });
</script>
