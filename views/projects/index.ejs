<div class="row mb-5">
  <div class="col-5 offset-4">
    <h1 class="text-cejnter">
      <% if (page === 'mine') { %> My Projects <% } else{ %> Projects <% } %>
    </h1>
  </div>
</div>

<div class="project-table">
  <div class="table-responsive">
    <table class="table">
      <thead>
        <tr>
          <th class="" scope="col">ID</th>
          <th class="" scope="col">Title</th>
          <th class="" scope="col">Owner</th>
          <th class="" scope="col">Description</th>
          <th class="" scope="col">Priority</th>
          <th class="" scope="col">Status</th>
          <th class="" scope="col">Create Date</th>
        </tr>
      </thead>
      <tbody>
        <% for (let project of projects) { %>
        <tr>
          <td
            class=""
            data-bs-toggle="tooltip"
            data-bs-placement="top"
            title="<%=project._id%>"
          >
            <a href="/api/v1/projects/<%= project._id %> ">
              ...<%=`${project._id}`.slice(-4)%></a
            >
          </td>
          <td class=""><%= project.title %></td>
          <td class=""><%= project.owner.first %> <%= project.owner.last %></td>
          <td class=""><%= project.description %></td>
          <td class=""><%= project.priority %></td>
          <td class=""><%= project.status %></td>
          <td class=""><%= project.createdAtDate %></td>
        </tr>

        <% }%>
      </tbody>
    </table>
  </div>
</div>

<% if (projects.length ===0 ) { %>
<div class="row">
  <div class="col-6">
    <h2 class="mt-5 offset-md-6 offset-2">No projects found</h2>
  </div>
</div>
<% }%>

