<% layout('templates/project-template') %>

<div class="row">
  <div class="col-10">
    <nav style="--bs-breadcrumb-divider: '>'" aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/api/v1/projects">Projects</a></li>
        <li class="breadcrumb-item">
          <a href="/api/v1/projects/<%= project._id %> "
            ><%= project.title %></a
          >
        </li>
        <li class="breadcrumb-item">
          <a href="/api/v1/projects/<%= project._id %>/issues">Issues</a>
        </li>

        <li class="breadcrumb-item active" aria-current="page">Issue</li>
      </ol>
    </nav>
  </div>

  <div class="col-2">
    <div class="dropdown">
      <button
        class="btn btn-outline-primary"
        type="button"
        data-bs-toggle="dropdown"
        aria-expanded="false"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="32"
          height="32"
          fill="currentColor"
          class="bi bi-list"
          viewBox="0 0 16 16"
        >
          <path
            fill-rule="evenodd"
            d="M2.5 12a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5z"
          />
        </svg>
      </button>
      <ul class="dropdown-menu">
        <li>
          <a
            class="dropdown-item"
            href="/api/v1/projects/<%= project._id %>/issues/<%= ticket._id %>/edit "
          >
            Edit
          </a>
        </li>

        <li><hr class="dropdown-divider" /></li>

        <li>
          <!-- Button trigger modal -->
          <button
            type="button"
            class="dropdown-item"
            data-bs-toggle="modal"
            data-bs-target="#exampleModal"
          >
            Delete
          </button>
        </li>
      </ul>
    </div>
  </div>
</div>
<!-- Modal for Delete button -->
<div
  class="modal fade"
  id="exampleModal"
  tabindex="-1"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Delete Issue?</h1>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        Are you sure you want to delete this issue? It cannot be undone.
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
          Close
        </button>

        <form
          action="/api/v1/projects/<%= project._id %>/issues/<%= ticket._id %>?_method=DELETE "
          method="POST"
        >
          <button type="submit" class="btn btn-danger">Delete</button>
        </form>
      </div>
    </div>
  </div>
</div>

<div class="card mt-5">
  <div class="card-header">
    <h1>Project: <%= project.title %></h1>
  </div>
  <div class="card-body">
    <h5 class="card-title">Issue - <%= ticket.title %></h5>

    <p class="card-text">
      <strong>Description:</strong> <%= ticket.description %>
    </p>
    <p class="card-text"><strong>Status:</strong> <%= ticket.status %></p>
    <p class="card-text"><strong>Priority:</strong> <%= ticket.priority %></p>

    <p class="card-text">
      <strong>Assigned to:</strong> <%= ticket.author.fullname %>
    </p>
  </div>
</div>
